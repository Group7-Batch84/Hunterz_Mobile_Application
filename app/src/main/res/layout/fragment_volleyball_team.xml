<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VolleyballTeam">

    <!--Post Subject-->
    <TextView
        android:id="@+id/post_subject"
        android:padding="3dp"
        android:textStyle="bold"
        android:background="@drawable/rounded_corner_sub_heading"
        android:textColor="#070202"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="Volleyball"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <!--Team ID Title-->
    <TextView
        android:id="@+id/team_id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team ID"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/post_subject"
        />

    <!--Team ID-->
    <TextView
        android:id="@+id/team_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/post_subject"
        />

    <TextView
        android:id="@+id/team_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:text="Team Name"
        android:layout_below="@+id/team_id"
        />

    <EditText
        android:id="@+id/team_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:accessibilityLiveRegion="none"
        android:drawableStart="@drawable/ic_team_name_32dp"
        android:drawablePadding="10dp"
        android:ems="10"
        android:layout_marginTop="5dp"
        android:hint="Enter Team Name"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_below="@+id/team_title"
        />

    <!--Line-->
    <TextView
        android:id="@+id/line"
        android:background="@drawable/rounded_corner_headng"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/team_txt"
        />

    <ScrollView
        android:layout_below="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
