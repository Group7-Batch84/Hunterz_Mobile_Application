<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">

    <RelativeLayout
        android:id="@+id/member_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >
        <!--Member Name-->
        <TextView
            android:id="@+id/member_name_view"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/rounded_corner_headng"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <!--Member Image-->
        <ImageView
            android:id="@+id/member_image_view"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:scaleType="fitXY"
            android:layout_below="@+id/member_name_view"
            android:src="@drawable/hunterz_logo"
            android:contentDescription="member Pic"
            />

        <!--Member Email ID-->
        <TextView
            android:id="@+id/member_email_view"
            android:padding="3dp"
            android:textStyle="bold"
            android:background="@drawable/rounded_corner_sub_heading"
            android:textColor="#070202"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/member_name_view"
            android:layout_toEndOf="@+id/member_image_view"
            android:layout_toRightOf="@+id/member_image"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <!--Member Phone Number-->
        <TextView
            android:id="@+id/member_phone_view"
            android:padding="3dp"
            android:textStyle="bold"
            android:background="@drawable/rounded_corner_sub_heading"
            android:textColor="#070202"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/member_email_view"
            android:layout_toEndOf="@+id/member_image_view"
            android:layout_toRightOf="@+id/member_image"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <!--Member NIC Number-->
        <TextView
            android:id="@+id/member_nic_view"
            android:padding="3dp"
            android:textStyle="bold"
            android:background="@drawable/rounded_corner_sub_heading"
            android:textColor="#070202"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/member_phone_view"
            android:layout_toEndOf="@+id/member_image_view"
            android:layout_toRightOf="@+id/member_image"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/member_image_view">
            <Button
                android:id="@+id/member_refuse_btn"
                android:layout_marginStart="10dp"
                android:layout_alignParentTop="false"
                android:layout_weight="0.5"
                android:layout_marginEnd="5dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/cus_radioGroupStatus"
                android:background="@drawable/danger_button"
                android:text="@string/refuse_btn"
                android:textColor="#EE1809"
                android:textSize="16sp"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/member_accept_btn"
                android:layout_width="0.5dp"
                android:layout_marginBottom="5dp"/>
            <Button
                android:id="@+id/member_accept_btn"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:layout_height="35dp"
                android:layout_weight="0.5"
                android:layout_below="@+id/cus_radioGroupStatus"
                android:background="@drawable/custom_button"
                android:text="@string/accept_btn"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:layout_width="0.5dp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>