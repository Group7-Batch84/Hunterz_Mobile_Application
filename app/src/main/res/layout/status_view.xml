<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="15dp">

    <RelativeLayout
        android:id="@+id/image_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <!--Member Name-->
        <TextView
            android:id="@+id/member_name"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/rounded_corner_headng"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_toEndOf="@+id/member_image_status"
            android:layout_toRightOf="@+id/member_image_status"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <!--Member Image-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/member_image_status"
            android:layout_width="135dp"
            android:layout_height="140dp"
            android:src="@drawable/hunterz_logo"
            android:elevation="1dp"
            />

        <!--Member Email ID-->
        <TextView
            android:id="@+id/member_email"
            android:padding="3dp"
            android:textStyle="bold"
            android:background="@drawable/rounded_corner_sub_heading"
            android:textColor="#070202"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/member_name"
            android:layout_toEndOf="@+id/member_image_status"
            android:layout_toRightOf="@+id/member_image_status"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <!--Member NIC Number-->
        <TextView
            android:id="@+id/member_nic"
            android:padding="3dp"
            android:textStyle="bold"
            android:background="@drawable/rounded_corner_sub_heading"
            android:textColor="#070202"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/member_email"
            android:layout_toEndOf="@+id/member_image_status"
            android:layout_toRightOf="@+id/member_image_status"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:id="@+id/button_panel"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/member_image_status"
            android:layout_toRightOf="@+id/member_image_status"
            android:orientation="horizontal"
            android:layout_below="@+id/member_nic">
            <Button
                android:id="@+id/member_deactivate_btn"
                android:layout_marginStart="10dp"
                android:layout_alignParentTop="false"
                android:layout_weight="0.5"
                android:layout_marginEnd="5dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/cus_radioGroupStatus"
                android:background="@drawable/deactivate_button"
                android:text="@string/deactivate_btn"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/member_activate_btn"
                android:layout_width="0.5dp"
                android:layout_marginBottom="5dp"/>
            <Button
                android:id="@+id/member_activate_btn"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:layout_height="30dp"
                android:layout_weight="0.5"
                android:layout_below="@+id/cus_radioGroupStatus"
                android:background="@drawable/activate_button"
                android:text="@string/activate_btn"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_alignParentEnd="true"
                android:layout_width="0.5dp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
        <!--Status Line-->
        <TextView
            android:id="@+id/status_line"
            android:padding="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_below="@+id/button_panel"
            android:textColor="#FFFFFF"
            android:textSize="4sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>