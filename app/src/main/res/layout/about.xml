<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/detailLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:background="#FFFFFF"
    >

    <ImageView
        android:id="@+id/club_logo"
        android:layout_width="90dp"
        android:layout_marginTop="10dp"
        android:layout_height="80dp"
        android:src="@drawable/hunterz_logo"
        android:layout_centerHorizontal="true"
        android:elevation="1dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/club_logo"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/club_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:layout_marginRight="15dp"
            android:text="Hunterz Sport Club"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/version_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/club_title"
            android:textStyle="bold"
            android:layout_marginRight="15dp"
            android:text="Version"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_below="@+id/version_title"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"
            android:text="1.1.0.0"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/phone_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/version"
            android:textStyle="bold"
            android:layout_marginRight="15dp"
            android:text="Phone Number"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_below="@+id/phone_title"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"
            android:text="0777754321"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/address_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/phone"
            android:textStyle="bold"
            android:layout_marginRight="15dp"
            android:text="Address"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_below="@+id/address_title"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"
            android:text="12/A Mirrigama Road, Negombo"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/developed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/address"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:text="Copyright \u00a9 ICBT HND Batch79 Group7"
            android:textSize="16sp" />

    </RelativeLayout>


</RelativeLayout>