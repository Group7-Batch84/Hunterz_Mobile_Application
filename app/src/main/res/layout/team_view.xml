<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="15dp">

    <RelativeLayout
        android:id="@+id/team_viewDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <!--Member Image-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/member_image"
            android:layout_marginTop="3dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="3dp"
            android:alpha="0.8"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:src="@drawable/hunterz_logo"
            android:elevation="1dp"
            />
        <!--Team Type-->
        <TextView
            android:id="@+id/team_type"
            android:padding="5dp"
            android:translationZ="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/rounded_corner_headng"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="CRICKET"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <!--Member ID-->
        <TextView
            android:id="@+id/team_id"
            android:padding="3dp"
            android:textStyle="bold"
            android:translationZ="1dp"
            android:background="@drawable/rounded_corner_sub_heading"
            android:textColor="#070202"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="CTM001"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/team_type"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <!--Member Email ID-->
        <TextView
            android:id="@+id/team_name"
            android:padding="3dp"
            android:textStyle="bold"
            android:background="@drawable/rounded_corner_sub_heading"
            android:textColor="#070202"
            android:layout_marginLeft="10dp"
            android:translationZ="1dp"
            android:text="Cricket A Team"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/team_id"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>